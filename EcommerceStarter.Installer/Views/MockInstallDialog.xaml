<Window x:Class="EcommerceStarter.Installer.Views.MockInstallDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setup"
        Height="240"
        Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Background="White">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main Content -->
        <StackPanel Grid.Row="0" Margin="24,24,24,16">
            
            <!-- App Icon and Name -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Icon -->
                <Border Grid.Column="0" 
                       Background="#0078D7" 
                       Width="48" 
                       Height="48" 
                       CornerRadius="4"
                       Margin="0,0,16,0">
                    <TextBlock Text="&#x1F4E6;" 
                              FontSize="28"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
                
                <!-- App Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="AppNameText"
                              Text=".NET 8 SDK"
                              FontFamily="Segoe UI"
                              FontSize="16"
                              FontWeight="SemiBold"/>
                    <TextBlock Text="Microsoft Corporation"
                              FontFamily="Segoe UI"
                              FontSize="11"
                              Foreground="#5C5C5C"
                              Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
            
            <!-- Status -->
            <TextBlock x:Name="StatusText"
                      Text="Installing..."
                      FontFamily="Segoe UI"
                      FontSize="13"
                      Margin="0,0,0,12"/>
            
            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar"
                        Height="6"
                        Minimum="0"
                        Maximum="100"
                        Value="0"
                        Margin="0,0,0,16"/>
            
            <!-- Demo watermark -->
            <TextBlock FontFamily="Segoe UI"
                      FontSize="10"
                      FontStyle="Italic"
                      Foreground="#999"
                      Margin="0,8,0,0">
                <Run Text="&#x1F527;"/> <Run Text=" DEMO MODE - No actual changes being made"/>
            </TextBlock>
        </StackPanel>
        
        <!-- Button Area -->
        <Border Grid.Row="1" 
               Background="#F3F3F3" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0"
               Padding="24,12">
            <Button x:Name="CancelButton"
                   Content="Cancel"
                   Width="80"
                   Height="28"
                   FontFamily="Segoe UI"
                   FontSize="12"
                   HorizontalAlignment="Right"
                   Click="CancelButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#F3F3F3"/>
                        <Setter Property="BorderBrush" Value="#8A8A8A"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Window>
