<Window x:Class="EcommerceStarter.Installer.Views.MockUacDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Account Control"
        Height="480"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Background="White">
    
    <Window.Resources>
        <!-- Modern flat button style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#0067C0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#0067C0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F3F3F3"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#8A8A8A"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,40,40,20" HorizontalAlignment="Stretch">
                
                <!-- Title -->
                <TextBlock Text="User Account Control"
                          FontFamily="Segoe UI"
                          FontSize="16"
                          FontWeight="SemiBold"
                          Margin="0,0,0,24"/>
                
                <!-- Main Question -->
                <TextBlock Text="Do you want to allow this app to make changes to your device?"
                          FontFamily="Segoe UI"
                          FontSize="14"
                          TextWrapping="Wrap"
                          Margin="0,0,0,32"/>
                
                <!-- App Name -->
                <TextBlock x:Name="AppNameText"
                          Text=".NET 8 SDK Installer"
                          FontFamily="Segoe UI"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>
                
                <!-- Verified Publisher -->
                <TextBlock FontFamily="Segoe UI" FontSize="12" Margin="0,0,0,12">
                    <Run Text="Verified publisher: " Foreground="#0067C0"/>
                    <Run x:Name="PublisherText" Text="Microsoft Corporation" FontWeight="SemiBold" Foreground="#0067C0"/>
                </TextBlock>
                
                <!-- File Origin -->
                <TextBlock Text="File origin: Hard drive on this computer"
                          FontFamily="Segoe UI"
                          FontSize="12"
                          Foreground="#5C5C5C"
                          Margin="0,0,0,16"/>
                
                <!-- Show more details (Expandable) -->
                <Expander Header="Show more details" 
                         FontFamily="Segoe UI"
                         FontSize="12"
                         Foreground="#0067C0"
                         Margin="0,0,0,24">
                    <StackPanel Margin="0,12,0,0">
                        <TextBlock Text="Program location:"
                                  FontFamily="Segoe UI"
                                  FontSize="11"
                                  Foreground="#5C5C5C"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="C:\Users\Downloads\dotnet-sdk-8.0-installer.exe"
                                  FontFamily="Segoe UI"
                                  FontSize="11"
                                  Foreground="#1F1F1F"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Publisher:"
                                  FontFamily="Segoe UI"
                                  FontSize="11"
                                  Foreground="#5C5C5C"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="Microsoft Corporation"
                                  FontFamily="Segoe UI"
                                  FontSize="11"
                                  Foreground="#1F1F1F"
                                  Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Certificate:"
                                  FontFamily="Segoe UI"
                                  FontSize="11"
                                  Foreground="#5C5C5C"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="Signed and verified"
                                  FontFamily="Segoe UI"
                                  FontSize="11"
                                  Foreground="#1F1F1F"/>
                    </StackPanel>
                </Expander>
                
                <!-- Demo Mode Warning -->
                <Border Background="#FFF9E6" 
                       BorderBrush="#F0D571" 
                       BorderThickness="1"
                       Padding="16,12"
                       Margin="0,0,0,0">
                    <StackPanel>
                        <TextBlock FontFamily="Segoe UI" FontSize="12" Margin="0,0,0,6">
                            <Run Text="&#x26A0;" Foreground="#C99700" FontSize="14"/>
                            <Run Text=" DEMO MODE" FontWeight="SemiBold"/>
                        </TextBlock>
                        <TextBlock Text="No actual changes will be made to your system."
                                  FontFamily="Segoe UI"
                                  FontSize="11"
                                  Foreground="#5C5C5C"
                                  TextWrapping="Wrap"
                                  Margin="18,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Button Bar -->
        <Border Grid.Row="1" 
               Background="#F3F3F3" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0"
               Padding="24,16">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button Content="Yes"
                       Style="{StaticResource PrimaryButton}"
                       Margin="0,0,8,0"
                       Click="YesButton_Click"
                       IsDefault="True"/>
                <Button Content="No"
                       Style="{StaticResource SecondaryButton}"
                       Click="NoButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
