<Page x:Class="EcommerceStarter.Installer.Views.RepairPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Repair Installation"
      Background="White">

    <Grid>
        <Border Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="1"
                CornerRadius="8"
                Padding="24"
                Margin="40">
            <StackPanel MaxWidth="800">
                <TextBlock Text="Repair Installation"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Running checks and applying fixes. This may take a minute."
                           FontSize="14"
                           Foreground="#444"
                           Margin="0,0,0,16"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="360">
                    <TextBlock x:Name="RepairOutput"
                               FontFamily="Consolas"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>

</Page>
