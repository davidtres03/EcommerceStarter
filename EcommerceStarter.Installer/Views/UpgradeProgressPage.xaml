<Page x:Class="EcommerceStarter.Installer.Views.UpgradeProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="Upgrading..."
      Background="Transparent">

    <Grid Background="{DynamicResource SystemControlPageBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="800"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Margin="40">
                
                <!-- Result Panel (Hidden initially, shown at TOP on completion) -->
                <Border x:Name="ResultPanel"
                        BorderThickness="3"
                        CornerRadius="8"
                        Padding="30"
                        Margin="0,0,0,30"
                        Visibility="Collapsed">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#E8F5E9"/>
                            <Setter Property="BorderBrush" Value="#4CAF50"/>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <!-- Result Icon (Dynamic - Success or Failure) -->
                        <Grid x:Name="ResultIconGrid"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"
                              Width="70"
                              Height="70">
                            <Ellipse x:Name="ResultIconBackground"
                                     Fill="#4CAF50"
                                     Width="70"
                                     Height="70"/>
                            <TextBlock x:Name="ResultIconSymbol"
                                       Text="✓"
                                       FontSize="40"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock x:Name="ResultTitle"
                                   Text="Upgrade Successful!"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <TextBlock x:Name="ResultMessage"
                                   Text="Upgrade completed successfully!"
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="0,0,0,25"/>

                        <Button x:Name="CloseButton"
                                Content="Close"
                                Click="CloseButton_Click"
                                MinWidth="160"
                                HorizontalAlignment="Center"
                                Padding="20,12"
                                Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                                Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Cursor="Hand"/>
                    </StackPanel>
                </Border>

                <!-- Progress Section (Visible during upgrade, hidden after completion) -->
                <StackPanel x:Name="ProgressSection" Margin="0,0,0,20">
                    <TextBlock Text="Upgrading..."
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <ProgressBar x:Name="ProgressBar"
                                 Height="30"
                                 Minimum="0"
                                 Maximum="100"
                                 Margin="0,0,0,20"/>

                    <TextBlock x:Name="StepText"
                               Text="Initializing..."
                               FontSize="14"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="StatusText"
                               Text="Starting upgrade process..."
                               FontSize="16"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                </StackPanel>

                <!-- Detail Log (Visible during upgrade, stays at BOTTOM after completion) -->
                <Expander x:Name="LogExpander"
                          Header="Upgrade Log (Click to expand/collapse)" 
                          IsExpanded="True"
                          BorderBrush="#007ACC"
                          BorderThickness="2"
                          Margin="0,0,0,20"
                          Background="White">
                    <Border Background="#F5F5F5"
                            BorderBrush="#007ACC"
                            BorderThickness="0,1,0,0"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="📋 All upgrade operations are logged in real-time below. This log remains visible even after completion."
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"
                                       Foreground="#0066CC"
                                       TextWrapping="Wrap"/>
                            <TextBox x:Name="DetailText"
                                     Text=""
                                     Height="250"
                                     FontSize="10"
                                     Foreground="#000000"
                                     Background="#FFFFFF"
                                     IsReadOnly="True"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     TextWrapping="NoWrap"
                                     FontFamily="Consolas"
                                     Padding="8"
                                     BorderBrush="#007ACC"
                                     BorderThickness="1"
                                     AcceptsReturn="True"/>
                        </StackPanel>
                    </Border>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
