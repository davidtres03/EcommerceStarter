<Page x:Class="EcommerceStarter.Installer.Views.InstanceSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Select Instance">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="30,20">
            <StackPanel>
                <TextBlock Text="EcommerceStarter Installer" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Select an existing instance to manage, or install a new instance" 
                          FontSize="14" 
                          Foreground="#BDC3C7"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20">
                
                <!-- Existing Instances Section -->
                <TextBlock Text="Existing Instances" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,15"/>

                <ItemsControl x:Name="InstancesList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" 
                                   BorderThickness="1" 
                                   CornerRadius="5" 
                                   Margin="0,0,0,15"
                                   Padding="20"
                                   Background="White"
                                   Cursor="Hand"
                                   MouseDown="Instance_MouseDown"
                                   Tag="{Binding}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                                <Setter Property="BorderBrush" Value="#3498DB"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding CompanyName}" 
                                                  FontSize="16" 
                                                  FontWeight="SemiBold"
                                                  Foreground="#2C3E50"/>
                                        
                                        <TextBlock Margin="0,5,0,0" Foreground="#7F8C8D">
                                            <Run Text="Site: "/>
                                            <Run Text="{Binding SiteName}" FontWeight="Medium"/>
                                        </TextBlock>
                                        
                                        <TextBlock Margin="0,3,0,0" Foreground="#7F8C8D">
                                            <Run Text="Version: "/>
                                            <Run Text="{Binding Version}"/>
                                            <Run Text=" | "/>
                                            <Run Text="Products: "/>
                                            <Run Text="{Binding ProductCount}"/>
                                            <Run Text=" | "/>
                                            <Run Text="Orders: "/>
                                            <Run Text="{Binding OrderCount}"/>
                                        </TextBlock>
                                        
                                        <TextBlock Text="{Binding InstallPath}" 
                                                  FontSize="11"
                                                  Foreground="#95A5A6"
                                                  Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right">
                                        <Border CornerRadius="12" Padding="10,4" Margin="0,0,0,6">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#E8F8F5"/>
                                                    <Setter Property="BorderBrush" Value="#27AE60"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsHealthy}" Value="False">
                                                            <Setter Property="Background" Value="#FFF5E6"/>
                                                            <Setter Property="BorderBrush" Value="#E67E22"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="12" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Healthy"/>
                                                        <Setter Property="Foreground" Value="#27AE60"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHealthy}" Value="False">
                                                                <Setter Property="Text" Value="Attention Needed"/>
                                                                <Setter Property="Foreground" Value="#D35400"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                        <TextBlock FontSize="11" Foreground="#7F8C8D">
                                            <Run Text="Issues: "/>
                                            <Run Text="{Binding Issues.Count, Mode=OneWay}"/>
                                        </TextBlock>

                                        <!-- Quick Actions -->
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <Button Content="Open Site" Tag="{Binding}" Click="OpenSite_Click"
                                                    Margin="0,0,6,0" Padding="10,4" FontSize="12" Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHealthy}" Value="False">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Content="Open Folder" Tag="{Binding}" Click="OpenFolder_Click"
                                                    Margin="0,0,6,0" Padding="10,4" FontSize="12" Cursor="Hand"/>
                                            <Button Content="Reconfigure" Tag="{Binding}" Click="Reconfigure_Click"
                                                    Margin="0,0,6,0" Padding="10,4" FontSize="12" Cursor="Hand"/>
                                            <Button Content="Uninstall" Tag="{Binding}" Click="Uninstall_Click"
                                                    Padding="10,4" FontSize="12" Cursor="Hand"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Install New Instance Section -->
                <TextBlock Text="New Installation" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Margin="0,20,0,15"/>

                <Border BorderBrush="#27AE60" 
                       BorderThickness="2" 
                       CornerRadius="5" 
                       Padding="20"
                       Background="White"
                       Cursor="Hand"
                       MouseDown="NewInstance_MouseDown">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8F8F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="+" 
                                  FontSize="32" 
                                  FontWeight="Bold"
                                  Foreground="#27AE60"
                                  Margin="0,0,15,0"
                                  VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Install New Instance" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="#27AE60"/>
                            <TextBlock Text="Create a new EcommerceStarter installation" 
                                      FontSize="12"
                                      Foreground="#7F8C8D"
                                      Margin="0,3,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="#ECF0F1" 
                Padding="30,15" 
                BorderBrush="#BDC3C7" 
                BorderThickness="0,1,0,0">
            <Grid>
                <Button Content="Exit" 
                       Width="100" 
                       Height="35"
                       HorizontalAlignment="Right"
                       Background="#95A5A6"
                       Foreground="White"
                       BorderThickness="0"
                       FontSize="14"
                       Cursor="Hand"
                       Click="Exit_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="3"
                                               Padding="15,8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
