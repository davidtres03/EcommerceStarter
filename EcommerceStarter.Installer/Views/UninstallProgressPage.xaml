<Page x:Class="EcommerceStarter.Installer.Views.UninstallProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="Uninstalling...">

    <Grid>
        <StackPanel MaxWidth="600" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Header -->
            <TextBlock Text="&#x1F5D1; Uninstalling EcommerceStarter"
                      FontSize="28"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>
            
            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar"
                        Height="8"
                        Margin="0,0,0,20"
                        Value="0"
                        Maximum="100"/>
            
            <!-- Status Message -->
            <TextBlock x:Name="StatusMessage"
                      Text="Preparing to uninstall..."
                      FontSize="16"
                      TextAlignment="Center"
                      Margin="0,0,0,30"/>
            
            <!-- Current Step -->
            <Border Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="20"
                   Margin="0,0,0,20"
                   MinHeight="100">
                <StackPanel>
                    <TextBlock Text="Current Step:" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,10"/>
                    <TextBlock x:Name="CurrentStepText"
                              Text="Initializing..."
                              TextWrapping="Wrap"
                              FontSize="14"/>
                </StackPanel>
            </Border>
            
            <!-- Success/Error Panel -->
            <Border x:Name="ResultPanel"
                   Visibility="Collapsed"
                   BorderThickness="2"
                   CornerRadius="8"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock x:Name="ResultIcon"
                              FontSize="48"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>
                    
                    <TextBlock x:Name="ResultMessage"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              FontSize="16"
                              Margin="0,0,0,15"/>
                    
                    <Button x:Name="CloseButton"
                           Content="Close"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="Close_Click"
                           HorizontalAlignment="Center"
                           MinWidth="120"
                           Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
