<Page x:Class="EcommerceStarter.Installer.Views.ConfigurationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Configuration">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="700">
            <!-- Title -->
            <TextBlock Text="Configure Your Store"
                       Style="{StaticResource PageTitleStyle}"/>

            <!-- Subtitle -->
            <TextBlock Style="{StaticResource PageSubtitleStyle}">
                Enter your store details. You can change these later from the admin panel.
            </TextBlock>

            <!-- Company Information Section -->
            <TextBlock Text="Company Information"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <TextBlock Text="Store Name"
                       Style="{StaticResource FormLabelStyle}"/>
            <TextBox x:Name="CompanyNameTextBox"
                     Style="{StaticResource FormTextBoxStyle}"
                     Text="My Store"/>
            <TextBlock x:Name="CompanyNameError"
                       Foreground="{StaticResource BrandDangerBrush}"
                       FontSize="11"
                       Margin="0,2,0,0"
                       Visibility="Collapsed"/>

            <TextBlock Text="Tagline (Optional)"
                       Style="{StaticResource FormLabelStyle}"/>
            <TextBox x:Name="TaglineTextBox"
                     Style="{StaticResource FormTextBoxStyle}"
                     Text="Powered by EcommerceStarter"/>

            <!-- Administrator Account Section -->
            <TextBlock Text="Administrator Account"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <TextBlock Text="Admin Email Address"
                       Style="{StaticResource FormLabelStyle}"/>
            <TextBox x:Name="AdminEmailTextBox"
                     Style="{StaticResource FormTextBoxStyle}"/>
            <TextBlock x:Name="EmailError"
                       Foreground="{StaticResource BrandDangerBrush}"
                       FontSize="11"
                       Margin="0,2,0,0"
                       Visibility="Collapsed"/>

            <TextBlock Text="Admin Password"
                       Style="{StaticResource FormLabelStyle}"/>
            <PasswordBox x:Name="AdminPasswordBox"
                         Style="{StaticResource FormPasswordBoxStyle}"/>
            <TextBlock x:Name="PasswordError"
                       Foreground="{StaticResource BrandDangerBrush}"
                       FontSize="11"
                       Margin="0,2,0,0"
                       Visibility="Collapsed"/>

            <TextBlock Text="Confirm Password"
                       Style="{StaticResource FormLabelStyle}"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Style="{StaticResource FormPasswordBoxStyle}"/>
            <TextBlock x:Name="ConfirmPasswordError"
                       Foreground="{StaticResource BrandDangerBrush}"
                       FontSize="11"
                       Margin="0,2,0,0"
                       Visibility="Collapsed"/>

            <!-- Database Configuration Section -->
            <TextBlock Text="Database Configuration"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Database Server"
                               Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="DatabaseServerTextBox"
                             Style="{StaticResource FormTextBoxStyle}"
                             Text="localhost\SQLEXPRESS"/>
                    <TextBlock Text="Usually 'localhost\SQLEXPRESS' for local development"
                               FontSize="11"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,2,0,10"/>

                    <TextBlock Text="Database Name"
                               Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="DatabaseNameTextBox"
                             Style="{StaticResource FormTextBoxStyle}"
                             Text="MyStore"/>
                </StackPanel>

                <Button x:Name="TestDatabaseButton"
                        Grid.Column="1"
                        Content="Test Connection"
                        VerticalAlignment="Bottom"
                        Margin="10,0,0,10"
                        Padding="12,8"
                        Background="{StaticResource BrandInfoBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Click="TestDatabase_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Opacity"
                                            Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled"
                                         Value="False">
                                    <Setter Property="Opacity"
                                            Value="0.6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Database Test Result -->
            <Border x:Name="DatabaseTestResult"
                    Visibility="Collapsed"
                    Margin="0,10,0,20"
                    Padding="10"
                    CornerRadius="6">
                <TextBlock x:Name="DatabaseTestMessage"
                           TextWrapping="Wrap"
                           FontSize="12"/>
            </Border>

            <!-- Use Existing Database Option -->
            <CheckBox x:Name="UseExistingDatabaseCheckBox"
                      Content="Use Existing Database (Skip Admin User Creation)"
                      IsChecked="False"
                      Margin="0,10,0,20"
                      FontSize="13"
                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>

            <TextBlock Text="Enable this if you're pointing to an existing database with data. The installer will apply any pending schema migrations without recreating tables or creating a new admin user."
                       FontSize="11"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       TextWrapping="Wrap"
                       Margin="20,0,0,20"/>


            <!-- Port Selection Section -->
            <TextBlock Text="Web Application Port"
                       Style="{StaticResource FormLabelStyle}"/>
            <TextBox x:Name="PortTextBox"
                     Style="{StaticResource FormTextBoxStyle}"
                     Text="443"
                     PreviewTextInput="PortTextBox_PreviewTextInput"
                     MaxLength="5"
                     Margin="0,0,0,10"/>
            <TextBlock Text="Enter the port number for your web application (e.g., 443 for HTTPS, 8080 for development)."
                       FontSize="11"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"/>

            <!-- HTTPS Option -->
            <CheckBox x:Name="EnableHttpsCheckBox"
                      Content="Enable HTTPS (create and bind a local self-signed certificate)"
                      IsChecked="False"
                      Margin="0,0,0,20"
                      FontSize="13"
                      ToolTip="When enabled, the installer will generate a self-signed certificate for 'localhost' and bind HTTPS on the selected port. If disabled, only HTTP will be configured and no certificate work will run."/>

            <!-- Installation Path Section -->
            <TextBlock Text="Installation Path"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <TextBlock Text="Your store will be installed to the standard IIS location. The folder name is based on your store name."
                       Style="{StaticResource FormLabelStyle}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>

            <TextBox x:Name="InstallPathTextBox"
                     Style="{StaticResource FormTextBoxStyle}"
                     IsReadOnly="True"
                     Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                     Text="C:\inetpub\wwwroot\MyStore"/>

            <TextBlock Text="Files will be published to this directory and configured as an IIS application"
                       FontSize="11"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       Margin="0,5,0,20"
                       TextWrapping="Wrap"/>

            <!-- Stripe Payment Integration -->
            <Border Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="ConfigureStripeCheckBox"
                                  Grid.Column="0"
                                  Content="Configure Stripe Payment Integration (Optional)"
                                  Checked="ConfigureStripe_Checked"
                                  Unchecked="ConfigureStripe_Unchecked"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"/>

                        <Button x:Name="StripeHelpButton"
                                Grid.Column="1"
                                Content="Setup Guide"
                                ToolTip="Open Stripe setup guide"
                                Padding="8,4"
                                Margin="10,0,0,0"
                                Background="Transparent"
                                BorderBrush="{StaticResource BrandInfoBrush}"
                                BorderThickness="1"
                                Foreground="{StaticResource BrandInfoBrush}"
                                Click="StripeHelp_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="{StaticResource BrandInfoBrush}"/>
                                            <Setter Property="Foreground"
                                                    Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <TextBlock Text="Accept credit cards and digital wallets. Get your keys from stripe.com/dashboard"
                               FontSize="11"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>

                    <StackPanel x:Name="StripeConfigPanel"
                                Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Stripe Publishable Key"
                                           Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="StripePublishableKeyTextBox"
                                         Style="{StaticResource FormTextBoxStyle}"
                                         Text="pk_test_..."/>

                                <TextBlock Text="Stripe Secret Key"
                                           Style="{StaticResource FormLabelStyle}"/>
                                <PasswordBox x:Name="StripeSecretKeyBox"
                                             Style="{StaticResource FormPasswordBoxStyle}"/>
                            </StackPanel>

                            <Button x:Name="TestStripeButton"
                                    Grid.Column="1"
                                    Content="Validate Keys"
                                    VerticalAlignment="Bottom"
                                    Margin="10,0,0,0"
                                    Padding="12,8"
                                    Background="{StaticResource BrandInfoBrush}"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Click="TestStripe_Click"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Opacity"
                                                        Value="0.9"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled"
                                                     Value="False">
                                                <Setter Property="Opacity"
                                                        Value="0.6"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <!-- Stripe Test Result -->
                        <Border x:Name="StripeTestResult"
                                Visibility="Collapsed"
                                Margin="0,10,0,0"
                                Padding="10"
                                CornerRadius="6">
                            <TextBlock x:Name="StripeTestMessage"
                                       TextWrapping="Wrap"
                                       FontSize="12"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Email Configuration -->
            <Border Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="ConfigureEmailCheckBox"
                                  Grid.Column="0"
                                  Content="Configure Email (Optional)"
                                  Checked="ConfigureEmail_Checked"
                                  Unchecked="ConfigureEmail_Unchecked"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"/>

                        <Button x:Name="EmailHelpButton"
                                Grid.Column="1"
                                Content="Setup Guide"
                                ToolTip="Open email setup guides"
                                Padding="8,4"
                                Margin="10,0,0,0"
                                Background="Transparent"
                                BorderBrush="{StaticResource BrandInfoBrush}"
                                BorderThickness="1"
                                Foreground="{StaticResource BrandInfoBrush}"
                                Click="EmailHelp_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="{StaticResource BrandInfoBrush}"/>
                                            <Setter Property="Foreground"
                                                    Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <TextBlock Text="Send order confirmations and notifications to customers"
                               FontSize="11"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,5,0,10"/>

                    <StackPanel x:Name="EmailConfigPanel"
                                Visibility="Collapsed">
                        <TextBlock Text="Email Provider"
                                   Style="{StaticResource FormLabelStyle}"/>
                        <ComboBox x:Name="EmailProviderComboBox"
                                  MinHeight="32"
                                  Margin="0,0,0,10"
                                  SelectionChanged="EmailProvider_SelectionChanged">
                            <ComboBoxItem Content="Resend (Recommended)"
                                          IsSelected="True"/>
                            <ComboBoxItem Content="SMTP (Gmail, Outlook, etc.)"/>
                        </ComboBox>

                        <!-- Resend Config -->
                        <StackPanel x:Name="ResendConfigPanel">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Resend API Key"
                                               Style="{StaticResource FormLabelStyle}"/>
                                    <PasswordBox x:Name="ResendApiKeyBox"
                                                 Style="{StaticResource FormPasswordBoxStyle}"/>
                                    <TextBlock Text="Get your API key from resend.com"
                                               FontSize="11"
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <Button x:Name="TestResendButton"
                                        Grid.Column="1"
                                        Content="Test API"
                                        VerticalAlignment="Bottom"
                                        Margin="10,0,0,0"
                                        Padding="12,8"
                                        Background="{StaticResource BrandInfoBrush}"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Click="TestResend_Click"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Opacity"
                                                            Value="0.9"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled"
                                                         Value="False">
                                                    <Setter Property="Opacity"
                                                            Value="0.6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <!-- Resend Test Result -->
                            <Border x:Name="ResendTestResult"
                                    Visibility="Collapsed"
                                    Margin="0,10,0,0"
                                    Padding="10"
                                    CornerRadius="6">
                                <TextBlock x:Name="ResendTestMessage"
                                           TextWrapping="Wrap"
                                           FontSize="12"/>
                            </Border>
                        </StackPanel>

                        <!-- SMTP Config -->
                        <StackPanel x:Name="SmtpConfigPanel"
                                    Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="SMTP Host"
                                               Style="{StaticResource FormLabelStyle}"/>
                                    <TextBox x:Name="SmtpHostTextBox"
                                             Style="{StaticResource FormTextBoxStyle}"
                                             Text="smtp.gmail.com"/>

                                    <TextBlock Text="SMTP Port"
                                               Style="{StaticResource FormLabelStyle}"/>
                                    <TextBox x:Name="SmtpPortTextBox"
                                             Style="{StaticResource FormTextBoxStyle}"
                                             Text="587"/>

                                    <TextBlock Text="SMTP Username"
                                               Style="{StaticResource FormLabelStyle}"/>
                                    <TextBox x:Name="SmtpUsernameTextBox"
                                             Style="{StaticResource FormTextBoxStyle}"
                                             Text="myemail@gmail.com"/>

                                    <TextBlock Text="SMTP Password"
                                               Style="{StaticResource FormLabelStyle}"/>
                                    <PasswordBox x:Name="SmtpPasswordBox"
                                                 Style="{StaticResource FormPasswordBoxStyle}"/>
                                </StackPanel>

                                <Button x:Name="TestSmtpButton"
                                        Grid.Column="1"
                                        Content="Test SMTP"
                                        VerticalAlignment="Bottom"
                                        Margin="10,0,0,0"
                                        Padding="12,8"
                                        Background="{StaticResource BrandInfoBrush}"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Click="TestSmtp_Click"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                CornerRadius="6"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Opacity"
                                                            Value="0.9"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled"
                                                         Value="False">
                                                    <Setter Property="Opacity"
                                                            Value="0.6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <!-- SMTP Test Result -->
                            <Border x:Name="SmtpTestResult"
                                    Visibility="Collapsed"
                                    Margin="0,10,0,0"
                                    Padding="10"
                                    CornerRadius="6">
                                <TextBlock x:Name="SmtpTestMessage"
                                           TextWrapping="Wrap"
                                           FontSize="12"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Validation Summary -->
            <Border x:Name="ValidationSummary"
                    Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                    BorderBrush="{StaticResource BrandDangerBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Please fix the following errors:"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrandDangerBrush}"/>
                    <TextBlock x:Name="ValidationMessages"
                               TextWrapping="Wrap"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
