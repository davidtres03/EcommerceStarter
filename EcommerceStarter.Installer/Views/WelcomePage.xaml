<Page x:Class="EcommerceStarter.Installer.Views.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Welcome"
      Loaded="Page_Loaded">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="700" Margin="0,20,0,0">
            <!-- Instance Selection (Shown when multiple instances detected) -->
            <Border x:Name="InstancePickerPanel"
                   Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="16"
                   Margin="0,0,0,16"
                   Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Select Existing Instance"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="InstanceCombo"
                                  Width="380"
                                  MinWidth="260"
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center"
                                  SelectionChanged="InstanceCombo_SelectionChanged"/>
                        <Button Content="Refresh"
                                Click="RefreshInstances_Click"
                                MinWidth="90"/>
                    </StackPanel>
                    <TextBlock x:Name="InstanceSummaryText"
                               Margin="0,8,0,0"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>
            </Border>
            <!-- Existing Installation Warning (Hidden by default) -->
            <Border x:Name="ExistingInstallationWarning"
                   Background="#FEF3C7"
                   BorderBrush="#F59E0B"
                   BorderThickness="2"
                   CornerRadius="8"
                   Padding="20"
                   Margin="0,0,0,20"
                   Visibility="Collapsed">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="&#x1F504;" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Existing Installation Detected"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="#92400E"/>
                    </StackPanel>
                    
                    <TextBlock x:Name="ExistingInstallationInfo"
                              TextWrapping="Wrap"
                              Foreground="#78350F"
                              Margin="0,0,0,15"/>
                    
                    <TextBlock TextWrapping="Wrap"
                              Foreground="#78350F"
                              Margin="0,0,0,10">
                        <Run Text="This installer can:"/>
                        <LineBreak/>
                        <Run Text="&#x2022; Reset the admin password"/>
                        <LineBreak/>
                        <Run Text="&#x2022; Update configuration settings"/>
                        <LineBreak/>
                        <Run Text="&#x2022; Reconfigure payment or email options"/>
                        <LineBreak/>
                        <LineBreak/>
                        <Run Text="&#x26A0;&#xFE0F; Your existing products and data will be preserved." FontWeight="SemiBold"/>
                    </TextBlock>
                    
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                  TextWrapping="Wrap"
                                  Foreground="#92400E"
                                  FontStyle="Italic"
                                  FontSize="12"
                                  VerticalAlignment="Center">
                            <Run Text="Click 'Next' to continue in reconfiguration mode."/>
                        </TextBlock>
                        
                        <Button Grid.Column="1"
                               x:Name="CheckPrerequisitesButton"
                               Content="&#x1F50D; Check Prerequisites"
                               Click="CheckPrerequisites_Click"
                               Background="#3B82F6"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="12,6"
                               Cursor="Hand"
                               HorizontalAlignment="Right"
                               FontSize="11"
                               ToolTip="Verify that .NET, SQL Server, and IIS are still installed"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Welcome Icon -->
            <TextBlock Text="&#x1F6D2;" 
                      FontSize="72"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>
            
            <!-- Title -->
            <TextBlock x:Name="WelcomeTitle"
                      Text="Welcome to EcommerceStarter Setup"
                      Style="{StaticResource PageTitleStyle}"
                      HorizontalAlignment="Center"/>
            
            <!-- Subtitle -->
            <TextBlock x:Name="WelcomeSubtitle"
                      Style="{StaticResource PageSubtitleStyle}"
                      HorizontalAlignment="Center"
                      TextAlignment="Center">
                This wizard will guide you through installing EcommerceStarter,
                <LineBreak/>
                a professional e-commerce platform built with ASP.NET Core 8.
            </TextBlock>
            
            <!-- What will be installed section -->
            <Border Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"
                   CornerRadius="8"
                   Padding="25"
                   Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock x:Name="InstallSectionTitle"
                              Text="What will be installed:"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- .NET 8 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                  Text="&#x2713;" 
                                  FontSize="16" 
                                  Foreground="{StaticResource BrandSuccessBrush}"
                                  Margin="0,0,10,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                  Margin="0,0,0,10">
                            <Run Text=".NET 8 SDK" FontWeight="SemiBold"/>
                            <Run Text=" - Latest Microsoft framework" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </TextBlock>
                        
                        <!-- SQL Server -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                  Text="&#x2713;" 
                                  FontSize="16" 
                                  Foreground="{StaticResource BrandSuccessBrush}"
                                  Margin="0,0,10,10"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                  Margin="0,0,0,10">
                            <Run Text="SQL Server Express" FontWeight="SemiBold"/>
                            <Run Text=" - Free database engine" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </TextBlock>
                        
                        <!-- IIS -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                  Text="&#x2713;" 
                                  FontSize="16" 
                                  Foreground="{StaticResource BrandSuccessBrush}"
                                  Margin="0,0,10,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                  Margin="0,0,0,10">
                            <Run Text="IIS (Internet Information Services)" FontWeight="SemiBold"/>
                            <Run Text=" - Web server" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </TextBlock>
                        
                        <!-- Database -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                  Text="&#x2713;" 
                                  FontSize="16" 
                                  Foreground="{StaticResource BrandSuccessBrush}"
                                  Margin="0,0,10,10"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                  Margin="0,0,0,10">
                            <Run Text="Store Database" FontWeight="SemiBold"/>
                            <Run Text=" - Your store's data" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </TextBlock>
                        
                        <!-- Website -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                  Text="&#x2713;" 
                                  FontSize="16" 
                                  Foreground="{StaticResource BrandSuccessBrush}"
                                  Margin="0,0,10,10"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" 
                                  Margin="0,0,0,10">
                            <Run Text="EcommerceStarter Website" FontWeight="SemiBold"/>
                            <Run Text=" - Your online store" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </TextBlock>
                        
                        <!-- Admin Panel -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                  Text="&#x2713;" 
                                  FontSize="16" 
                                  Foreground="{StaticResource BrandSuccessBrush}"
                                  Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="5" Grid.Column="1">
                            <Run Text="Admin Dashboard" FontWeight="SemiBold"/>
                            <Run Text=" - Manage your store" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Estimated time -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,30,0,0">
                <TextBlock Text="&#x23F1;" FontSize="16" Margin="0,0,8,0"/>
                <TextBlock>
                    <Run Text="Estimated installation time:" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    <Run Text=" 15-30 minutes" FontWeight="SemiBold"/>
                </TextBlock>
            </StackPanel>
            
            <!-- Requirements notice -->
            <Border Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                   BorderBrush="{StaticResource BrandWarningBrush}"
                   BorderThickness="2"
                   CornerRadius="8"
                   Padding="20"
                   Margin="0,30,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="&#x26A0;" FontSize="16" Margin="0,0,8,0" Foreground="{StaticResource BrandWarningBrush}"/>
                        <TextBlock Text="Important Requirements" FontWeight="SemiBold" FontSize="14"/>
                    </StackPanel>
                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                        <Run Text="&#x2022;"/> Administrator privileges are required
                        <LineBreak/>
                        <Run Text="&#x2022;"/> At least 2 GB of free disk space
                        <LineBreak/>
                        <Run Text="&#x2022;"/> Internet connection for downloading components
                        <LineBreak/>
                        <Run Text="&#x2022;"/> Windows 10/11 or Windows Server 2016+
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <!-- Ready to begin -->
            <TextBlock Text="Click 'Next' to begin the installation"
                      HorizontalAlignment="Center"
                      Margin="0,40,0,20"
                      FontStyle="Italic"
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>
    </ScrollViewer>
</Page>

