<Page x:Class="EcommerceStarter.Installer.Views.MaintenanceModePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Maintenance Mode"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel Grid.Row="0"
                        Margin="0,0,0,30">
                <TextBlock Text="Existing Installation Found"
                           FontSize="28"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Choose what you'd like to do with your existing store"
                           FontSize="14"
                           Foreground="#666666"/>
            </StackPanel>

            <!-- Installation Info Card -->
            <Border Grid.Row="1"
                    Background="#F8F9FA"
                    BorderBrush="#DEE2E6"
                    BorderThickness="1"
                    Padding="25"
                    CornerRadius="8"
                    Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="Current Installation"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Company Name -->
                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="Store Name:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,15,8"/>
                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   x:Name="CompanyNameText"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>

                        <!-- Install Path -->
                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Text="Location:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,15,8"/>
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   x:Name="InstallPathText"
                                   FontSize="14"
                                   Foreground="#666666"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8"/>

                        <!-- Database -->
                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Text="Database:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,15,8"/>
                        <TextBlock Grid.Row="2"
                                   Grid.Column="1"
                                   x:Name="DatabaseText"
                                   FontSize="14"
                                   Foreground="#666666"
                                   Margin="0,0,0,8"/>

                        <!-- Version -->
                        <TextBlock Grid.Row="3"
                                   Grid.Column="0"
                                   Text="Version:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,15,15"/>
                        <TextBlock Grid.Row="3"
                                   Grid.Column="1"
                                   x:Name="VersionText"
                                   FontSize="14"
                                   Foreground="#666666"
                                   Margin="0,0,0,15"/>

                        <!-- Statistics -->
                        <TextBlock Grid.Row="4"
                                   Grid.Column="0"
                                   Text="Statistics:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,15,0"
                                   VerticalAlignment="Top"/>
                        <StackPanel Grid.Row="4"
                                    Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="LeftToRight">
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,25,0">
                                <TextBlock Text="Products: "
                                           FontSize="14"
                                           Foreground="#666666"/>
                                <TextBlock x:Name="ProductCountText"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,25,0">
                                <TextBlock Text="Orders: "
                                           FontSize="14"
                                           Foreground="#666666"/>
                                <TextBlock x:Name="OrderCountText"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Users: "
                                           FontSize="14"
                                           Foreground="#666666"/>
                                <TextBlock x:Name="UserCountText"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Health Status -->
                    <Border x:Name="HealthStatusBorder"
                            Background="#D1F2EB"
                            BorderBrush="#48C9B0"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,15,0,0"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="HealthStatusText"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#0D5E4F"/>
                            <TextBlock x:Name="IssuesText"
                                       FontSize="12"
                                       Foreground="#0D5E4F"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,0"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    <!-- Version Check Info Section -->
                    <Border x:Name="DebugInfoBorder"
                            Background="#F0F0F0"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,15,0,0"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="📋 Version Check Info"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#666666"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="DebugInfoText"
                                       FontSize="10"
                                       Foreground="#333333"
                                       TextWrapping="Wrap"
                                       FontFamily="Courier New"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Update Available Banner -->
            <Border x:Name="UpdateAvailableBanner"
                    Grid.Row="2"
                    Background="#E7F3FF"
                    BorderBrush="#0078D4"
                    BorderThickness="2"
                    Padding="20"
                    CornerRadius="8"
                    Margin="0,0,0,30"
                    Visibility="Collapsed">
                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,12">
                        <TextBlock Text="UPDATE AVAILABLE"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#0078D4"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,8">
                                <TextBlock Text="Current Version: "
                                           FontSize="13"
                                           Foreground="#333333"/>
                                <TextBlock x:Name="CurrentVersionDisplay"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#333333"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Available Version: "
                                           FontSize="13"
                                           Foreground="#0078D4"/>
                                <TextBlock x:Name="AvailableVersionDisplay"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#0078D4"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Grid.Column="1"
                                   Text="Click UPGRADE above to get the latest features and improvements"
                                   FontSize="12"
                                   Foreground="#666666"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"
                                   Margin="15,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Action Options -->
            <StackPanel Grid.Row="2">
                <TextBlock Text="What would you like to do?"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,25"/>

                <!-- Options Container -->
                <Border Background="White"
                        BorderBrush="#0078D4"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="0">
                    <StackPanel>
                        <!-- Upgrade Button -->
                        <Button x:Name="UpgradeButton"
                                Height="85"
                                Click="Upgrade_Click"
                                HorizontalContentAlignment="Stretch"
                                Padding="25,15"
                                Margin="0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Tag="upgrade">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="#D0D0D0"
                                                        BorderThickness="0,0,0,1"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#F5F5F5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="↑"
                                           FontSize="32"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="UPGRADE"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#0078D4"/>
                                    <TextBlock Text="Update to the latest version (all data preserved)"
                                               FontSize="13"
                                               Foreground="#666666"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- Reconfigure Button -->
                        <Button x:Name="ReconfigureButton"
                                Height="85"
                                Click="Reconfigure_Click"
                                HorizontalContentAlignment="Stretch"
                                Padding="25,15"
                                Margin="0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="#D0D0D0"
                                                        BorderThickness="0,0,0,1"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#F5F5F5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="⚙"
                                           FontSize="32"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="RECONFIGURE"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#333333"/>
                                    <TextBlock Text="Reset admin password, update settings"
                                               FontSize="13"
                                               Foreground="#666666"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- Repair Button -->
                        <Button x:Name="RepairButton"
                                Height="85"
                                Click="Repair_Click"
                                HorizontalContentAlignment="Stretch"
                                Padding="25,15"
                                Margin="0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="#D0D0D0"
                                                        BorderThickness="0,0,0,1"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#F5F5F5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="⚒"
                                           FontSize="32"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="REPAIR"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#333333"/>
                                    <TextBlock Text="Fix broken files, verify installation"
                                               FontSize="13"
                                               Foreground="#666666"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- Uninstall Button -->
                        <Button x:Name="UninstallButton"
                                Height="85"
                                Click="Uninstall_Click"
                                HorizontalContentAlignment="Stretch"
                                Padding="25,15"
                                Margin="0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#FDEDEC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="✕"
                                           FontSize="32"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="UNINSTALL"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#E74C3C"/>
                                    <TextBlock Text="Remove this installation (database preserved)"
                                               FontSize="13"
                                               Foreground="#666666"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Back Button -->
            <Button Grid.Row="3"
                    Content="← Back"
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Left"
                    Margin="0,30,0,0"
                    Click="Back_Click"
                    Background="White"
                    BorderBrush="#CCCCCC"
                    FontSize="14"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="20,8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#F8F9FA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </ScrollViewer>
</Page>
