@page
@model TrackOrderModel
@{
    ViewData["Title"] = "Track Your Order";
}

<div class="track-order container mt-4 mb-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-4 text-center">
                <i class="bi bi-search"></i> Track Your Order
            </h1>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-box-seam"></i> Order Lookup
                    </h5>
                </div>
                <div class="card-body">
                    <p class="mb-4">
                        Enter your email address and order number to track your order. You can find your order number 
                        in the confirmation email we sent you.
                    </p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" type="email" placeholder="your@email.com" autofocus />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <small class="form-text text-muted">The email address used when placing the order</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.OrderNumber" class="form-label"></label>
                            <input asp-for="Input.OrderNumber" class="form-control" class="text-uppercase" placeholder="CAP-8X4K2M9P" style="font-family: monospace;" />
                            <span asp-validation-for="Input.OrderNumber" class="text-danger"></span>
                            <small class="form-text text-muted">Found in your order confirmation email</small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Track Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-4 bg-light border-0">
                <div class="card-body">
                    <h6 class="mb-3"><i class="bi bi-info-circle text-primary"></i> Need Help?</h6>
                    <ul class="small mb-0">
                        <li class="mb-2">
                            <strong>Can't find your order number?</strong> Check your email inbox for the order confirmation we sent you.
                        </li>
                        <li class="mb-2">
                            <strong>Have an account?</strong> <a asp-page="/Account/Login">Sign in</a> to view all your orders in one place.
                        </li>
                        <li>
                            <strong>Still need help?</strong> Contact us at <a href="mailto:support@example.com">support@example.com</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-page="/Index" class="btn btn-outline-secondary">
                    <i class="bi bi-house"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

