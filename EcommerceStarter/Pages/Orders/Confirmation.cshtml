@page
@model ConfirmationModel
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                <h1 class="mt-3">Order Confirmed!</h1>
                <p class="lead">Thank you for your purchase</p>
            </div>

            @if (Model.Order != null)
            {
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Order #@Model.Order.Id</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6>Order Date:</h6>
                                <p>@Model.Order.OrderDate.ToLocalTime().ToString("MMMM dd, yyyy hh:mm tt")</p>
                            </div>
                            <div class="col-md-6">
                                <h6>Status:</h6>
                                <p><span class="badge bg-warning">@Model.Order.Status</span></p>
                            </div>
                        </div>

                        <h6>Shipping Address:</h6>
                        <address>
                            @Model.Order.ShippingAddress<br>
                            @Model.Order.ShippingCity, @Model.Order.ShippingState @Model.Order.ShippingZip
                        </address>

                        <hr>

                        <h6>Order Items:</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Order.OrderItems)
                                    {
                                        <tr>
                                            <td>@item.Product?.Name</td>
                                            <td>@item.Quantity</td>
                                            <td>$@item.UnitPrice.ToString("F2")</td>
                                            <td>$@item.TotalPrice.ToString("F2")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Subtotal:</strong></td>
                                        <td><strong>$@Model.Order.Subtotal.ToString("F2")</strong></td>
                                    </tr>
                                    @if (Model.Order.TaxAmount > 0)
                                    {
                                        <tr>
                                            <td colspan="3" class="text-end">
                                                <strong>Tax (@TaxRates.GetTaxRateFormatted(Model.Order.ShippingState)):</strong>
                                            </td>
                                            <td><strong>$@Model.Order.TaxAmount.ToString("F2")</strong></td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Shipping:</strong></td>
                                        <td><strong>FREE</strong></td>
                                    </tr>
                                    <tr class="table-success">
                                        <td colspan="3" class="text-end"><h5 class="mb-0">Total:</h5></td>
                                        <td><h5 class="mb-0">$@Model.Order.TotalAmount.ToString("F2")</h5></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info">
                    <h6 class="alert-heading">
                        <i class="bi bi-info-circle"></i> What's Next?
                    </h6>
                    <p class="mb-0">
                        You will receive an email confirmation shortly. You can track your order status from your account dashboard.
                    </p>
                </div>

                <div class="text-center">
                    <a asp-page="/Products/Index" class="btn btn-primary">Continue Shopping</a>
                    <a asp-page="/Orders/Index" class="btn btn-outline-primary">View My Orders</a>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    Order not found.
                </div>
            }
        </div>
    </div>
</div>
