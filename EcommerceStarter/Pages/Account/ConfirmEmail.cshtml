@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4 text-center">
                    @if (Model.IsSuccess)
                    {
                        <div class="mb-3">
                            <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                        </div>
                        
                        <h1 class="card-title mb-2">Email Confirmed!</h1>
                        <p class="text-muted mb-4">@Model.StatusMessage</p>

                        <a asp-page="Login" class="btn btn-primary mb-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                        </a>
                    }
                    else
                    {
                        <div class="mb-3">
                            <i class="bi bi-exclamation-circle text-danger" style="font-size: 3rem;"></i>
                        </div>
                        
                        <h1 class="card-title mb-2">Email Confirmation Failed</h1>
                        <p class="text-muted mb-4">@Model.StatusMessage</p>

                        <a asp-page="Index" class="btn btn-primary mb-3">
                            <i class="bi bi-house me-2"></i>Back to Home
                        </a>

                        <p class="text-muted small mt-3">
                            Need help? <a href="/" class="text-decoration-none">Contact us</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
