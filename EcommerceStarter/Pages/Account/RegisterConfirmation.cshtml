@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-info">
                <div class="card-body p-4 text-center">
                    <div class="mb-3">
                        <i class="bi bi-envelope-check text-info" style="font-size: 3rem;"></i>
                    </div>
                    
                    <h1 class="card-title mb-2">Verify Your Email</h1>
                    <p class="text-muted mb-4">We've sent a verification email to your inbox. Please click the link in the email to verify your account and get started shopping.</p>

                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Check your inbox</strong> (and spam folder) for the verification email.
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>

                    <div class="mt-4">
                        <p class="text-muted small">
                            Didn't receive the email? 
                            <button type="button" class="btn btn-link p-0" data-bs-toggle="modal" data-bs-target="#resendEmailModal">
                                Resend verification email
                            </button>
                        </p>
                    </div>

                    <hr class="my-4">

                    <div>
                        <p class="text-muted small mb-0">
                            <i class="bi bi-shield-check me-1"></i>
                            Your account will be fully activated once you verify your email.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Resend Email Modal -->
<div class="modal fade" id="resendEmailModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Resend Verification Email</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="ResendEmail">
                <div class="modal-body">
                    <p class="text-muted">Enter your email address to resend the verification email.</p>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" id="email" name="email" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Resend Email</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-show resend modal if error occurred
            @if (TempData["Error"] != null)
            {
                <text>
                const modal = new bootstrap.Modal(document.getElementById('resendEmailModal'));
                modal.show();
                </text>
            }
        });
    </script>
}
