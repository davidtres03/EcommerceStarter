@page
@model MetricsModel
@{
    ViewData["Title"] = "Performance Metrics";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5">Performance Metrics</h1>
            <p class="text-muted">24-hour service performance analytics</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="/Admin/ServiceDashboard" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Metrics Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-muted">Avg Response Time</h6>
                    <h3 class="fw-bold text-primary">@(Model.Metrics?.AverageResponseTimeMs ?? 0)ms</h3>
                    <small class="text-muted">Last 24 hours</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-muted">Avg CPU Usage</h6>
                    <h3 class="fw-bold text-warning">@(Model.Metrics?.AverageCpuUsagePercent ?? 0)%</h3>
                    <small class="text-muted">Last 24 hours</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-muted">Avg Memory Usage</h6>
                    <h3 class="fw-bold text-info">@(Model.Metrics?.AverageMemoryUsageMb ?? 0)MB</h3>
                    <small class="text-muted">Last 24 hours</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-muted">Uptime</h6>
                    <h3 class="fw-bold text-success">@(Model.Metrics?.UptimePercent ?? 0)%</h3>
                    <small class="text-muted">Last 24 hours</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Metrics -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up"></i> Status History
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.StatusLogs?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Timestamp</th>
                                        <th>Response (ms)</th>
                                        <th>CPU (%)</th>
                                        <th>Memory (MB)</th>
                                        <th>Web Service</th>
                                        <th>BG Service</th>
                                        <th>Database</th>
                                        <th>Active Users</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in Model.StatusLogs)
                                    {
                                        <tr>
                                            <td class="small">@log.Timestamp.ToString("HH:mm:ss")</td>
                                            <td>
                                                <span class="@(log.ResponseTimeMs < 100 ? "text-success" : log.ResponseTimeMs < 500 ? "text-warning" : "text-danger")">
                                                    @log.ResponseTimeMs
                                                </span>
                                            </td>
                                            <td>
                                                <span class="@(log.CpuUsagePercent < 50 ? "text-success" : log.CpuUsagePercent < 80 ? "text-warning" : "text-danger")">
                                                    @log.CpuUsagePercent
                                                </span>
                                            </td>
                                            <td>
                                                <span class="@(log.MemoryUsageMb < 500 ? "text-success" : log.MemoryUsageMb < 1000 ? "text-warning" : "text-danger")">
                                                    @log.MemoryUsageMb
                                                </span>
                                            </td>
                                            <td>
                                                @if (log.IsWebServiceOnline)
                                                {
                                                    <span class="badge bg-success">Online</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Offline</span>
                                                }
                                            </td>
                                            <td>
                                                @if (log.IsBackgroundServiceRunning)
                                                {
                                                    <span class="badge bg-success">Running</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Stopped</span>
                                                }
                                            </td>
                                            <td>
                                                @if (log.DatabaseConnected)
                                                {
                                                    <span class="badge bg-success">Connected</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Disconnected</span>
                                                }
                                            </td>
                                            <td>@log.ActiveUserCount</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No status data recorded yet. The background service logs metrics every 5 minutes.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
