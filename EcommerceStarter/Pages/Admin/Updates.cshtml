@page
@model UpdatesModel
@{
    ViewData["Title"] = "Update History";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5">Update History</h1>
            <p class="text-muted">View all applied updates and deployment history</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="/Admin/ServiceDashboard" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card bg-light">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="statusFilter" class="form-label">Status</label>
                            <select class="form-select form-select-sm" id="statusFilter" name="statusFilter">
                                <option value="">All Statuses</option>
                                <option value="Success" selected="@(Model.StatusFilter == "Success")">Success</option>
                                <option value="Failed" selected="@(Model.StatusFilter == "Failed")">Failed</option>
                                <option value="RolledBack" selected="@(Model.StatusFilter == "RolledBack")">Rolled Back</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="fromDate" class="form-label">From Date</label>
                            <input type="date" class="form-control form-control-sm" id="fromDate" name="fromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-3">
                            <label for="toDate" class="form-label">To Date</label>
                            <input type="date" class="form-control form-control-sm" id="toDate" name="toDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-3">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-sm btn-primary w-100">Apply Filters</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Updates Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul"></i> Updates
                    </h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Version</th>
                                <th>Applied At</th>
                                <th>Status</th>
                                <th>Duration</th>
                                <th>Release Notes</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Updates?.Any() == true)
                            {
                                @foreach (var update in Model.Updates)
                                {
                                    <tr>
                                        <td class="fw-bold">v@(update.Version)</td>
                                        <td>@update.AppliedAt.ToString("MMM dd, yyyy HH:mm:ss")</td>
                                        <td>
                                            @if (update.Status == "Success")
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Success
                                                </span>
                                            }
                                            else if (update.Status == "Failed")
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> Failed
                                                </span>
                                            }
                                            else if (update.Status == "RolledBack")
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-arrow-counterclockwise"></i> Rolled Back
                                                </span>
                                            }
                                        </td>
                                        <td>@update.ApplyDurationSeconds seconds</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(update.ReleaseNotes))
                                            {
                                                <small>@update.ReleaseNotes</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">â€”</span>
                                            }
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#detailsModal@(update.Id)">
                                                Details
                                            </button>

                                            <!-- Details Modal -->
                                            <div class="modal fade" id="detailsModal@(update.Id)" tabindex="-1">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Update Details - v@(update.Version)</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="row mb-3">
                                                                <div class="col-md-6">
                                                                    <strong>Status:</strong>
                                                                    @if (update.Status == "Success")
                                                                    {
                                                                        <span class="badge bg-success">Success</span>
                                                                    }
                                                                    else if (update.Status == "Failed")
                                                                    {
                                                                        <span class="badge bg-danger">Failed</span>
                                                                    }
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <strong>Duration:</strong> @update.ApplyDurationSeconds seconds
                                                                </div>
                                                            </div>
                                                            <div class="row mb-3">
                                                                <div class="col-md-12">
                                                                    <strong>Release Notes:</strong>
                                                                    @if (!string.IsNullOrEmpty(update.ReleaseNotes))
                                                                    {
                                                                        <div class="mt-2 p-3 bg-light rounded" style="white-space: pre-wrap; font-family: 'Segoe UI', sans-serif; font-size: 0.9rem;">@update.ReleaseNotes</div>
                                                                    }
                                                                    else
                                                                    {
                                                                        <p class="text-muted">No release notes provided</p>
                                                                    }
                                                                </div>
                                                            </div>
                                                            @if (!string.IsNullOrEmpty(update.ErrorMessage))
                                                            {
                                                                <div class="row">
                                                                    <div class="col-md-12">
                                                                        <strong>Error Message:</strong>
                                                                        <div class="alert alert-danger small">
                                                                            @update.ErrorMessage
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted p-4">No updates found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
