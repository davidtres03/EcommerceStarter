@page
@model EcommerceStarter.Pages.Admin.Settings.GoogleAnalyticsModel
@{
    ViewData["Title"] = "Google Tag Manager Setup";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1>
                <i class="bi bi-graph-up-arrow text-primary"></i> Google Tag Manager / Analytics Setup
            </h1>
            <p class="lead text-muted">
                Configure Google Tag Manager (GTM) or Google Analytics 4 (GA4) with Cloudflare's Google Tag Gateway for improved performance and privacy.
            </p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Left Column: Configuration -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-gear-fill"></i> Google Tag Configuration</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label asp-for="GoogleTagManagerId" class="form-label fw-bold">
                                Google Tag ID <span class="badge bg-secondary">GTM or GA4</span>
                            </label>
                            <input asp-for="GoogleTagManagerId" 
                                   class="form-control form-control-lg" 
                                   placeholder="GTM-XXXXXXX or G-XXXXXXXXXX"
                                   pattern="^(GTM-[A-Z0-9]+|G-[A-Z0-9]+)$"
                                   title="Format: GTM-XXXXXXX (Tag Manager) or G-XXXXXXXXXX (Analytics 4)"
                                   required />
                            <div class="form-text">
                                Your Google Tag Manager ID (format: <code>GTM-XXXXXXX</code>) or Google Analytics 4 Measurement ID (format: <code>G-XXXXXXXXXX</code>)
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MeasurementPath" class="form-label fw-bold">
                                Measurement Path <span class="badge bg-info">Important</span>
                            </label>
                            <input asp-for="MeasurementPath" 
                                   class="form-control" 
                                   placeholder="/metrics"
                                   pattern="^/[a-zA-Z0-9/]+$"
                                   title="Must start with / and contain only letters, numbers, and forward slashes"
                                   required />
                            <div class="form-text">
                                <strong>This MUST match the path configured in Cloudflare.</strong><br>
                                Examples: <code>/metrics</code>, <code>/analytics</code>, <code>/securemetric</code><br>
                                <small class="text-muted">Can only contain letters, numbers, and forward slashes</small>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <i class="bi bi-info-circle-fill"></i> <strong>Where to find your Google Tag ID:</strong><br>
                                <strong>For Tag Manager (GTM):</strong> Google Tag Manager ? Select container ? ID shown at top<br>
                                <strong>For Analytics (GA4):</strong> Google Analytics ? Admin ? Data Streams ? Measurement ID
                            </small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save"></i> Save Google Tag ID
                            </button>
                            <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Dashboard
                            </a>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.GoogleTagManagerId))
                    {
                        <div class="alert alert-success mt-3 mb-0">
                            <i class="bi bi-check-circle-fill"></i> <strong>Current Configuration:</strong><br>
                            <strong>Google Tag ID:</strong> <code class="fs-6">@Model.GoogleTagManagerId</code>
                            @if (Model.GoogleTagManagerId.StartsWith("GTM-"))
                            {
                                <span class="badge bg-primary">Tag Manager</span>
                            }
                            else if (Model.GoogleTagManagerId.StartsWith("G-"))
                            {
                                <span class="badge bg-info">Analytics 4</span>
                            }
                            <br>
                            <strong>Path:</strong> <code class="fs-6">@(Model.MeasurementPath ?? "/metrics")</code>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column: Instructions -->
        <div class="col-lg-8">
            <div class="card mb-4 border-info">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-list-ol"></i> Setup Instructions</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i> <strong>Important:</strong> Complete both steps below for GTM to work with Cloudflare Gateway.
                    </div>

                    <div class="alert alert-success">
                        <i class="bi bi-check-circle-fill"></i> <strong>Good News!</strong> Your server is already configured to support Cloudflare Gateway. The required headers are automatically added when you save your GTM ID.
                    </div>

                    <h6 class="fw-bold mb-3">Step 1: Save Your GTM ID (Left Side)</h6>
                    <p class="small">Enter your Google Tag Manager ID in the form on the left and click "Save GTM ID". This will add the GTM script to all pages on your website.</p>

                    <hr class="my-4">

                    <h6 class="fw-bold mb-3">Step 2: Configure Cloudflare Google Tag Gateway</h6>
                    
                    <div class="accordion" id="cloudflareSetup">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#method1">
                                    <strong>Option A: From Cloudflare Dashboard (Recommended)</strong>
                                </button>
                            </h2>
                            <div id="method1" class="accordion-collapse collapse show" data-bs-parent="#cloudflareSetup">
                                <div class="accordion-body">
                                    <ol class="small">
                                        <li class="mb-2">Log in to <a href="https://dash.cloudflare.com/" target="_blank" rel="noopener">Cloudflare Dashboard</a></li>
                                        <li class="mb-2">Select your website</li>
                                        <li class="mb-2">Go to <strong>Zaraz</strong> <i class="bi bi-arrow-right"></i> <strong>Google Tag Gateway</strong></li>
                                        <li class="mb-2">Click <strong>Turn on and configure Google tag gateway</strong></li>
                                        <li class="mb-2">Enter your Google Tag ID: <code class="bg-light px-2 py-1">@(Model.GoogleTagManagerId ?? "GTM-XXXXXXX or G-XXXXXXXXXX")</code></li>
                                        <li class="mb-2">
                                            <strong>Set the measurement path to:</strong> 
                                            <code class="bg-warning px-2 py-1">@(Model.MeasurementPath ?? "/metrics")</code>
                                            <br>
                                            <small class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> This MUST match exactly what you entered on the left!</small>
                                        </li>
                                        <li class="mb-2">Click <strong>Save</strong></li>
                                    </ol>
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#method2">
                                    <strong>Option B: From Google Tag Manager</strong>
                                </button>
                            </h2>
                            <div id="method2" class="accordion-collapse collapse" data-bs-parent="#cloudflareSetup">
                                <div class="accordion-body">
                                    <ol class="small">
                                        <li class="mb-2">Log in to <a href="https://tagmanager.google.com/" target="_blank" rel="noopener">Google Tag Manager</a></li>
                                        <li class="mb-2">Select your container</li>
                                        <li class="mb-2">Go to <strong>Admin</strong> <i class="bi bi-arrow-right"></i> <strong>Google tag gateway</strong></li>
                                        <li class="mb-2">Click <strong>Continue</strong> to start setup</li>
                                        <li class="mb-2">Accept the measurement path</li>
                                        <li class="mb-2">Click <strong>Sign in to Cloudflare</strong></li>
                                        <li class="mb-2">Authorize Google to manage settings</li>
                                        <li class="mb-2">Select your domain and click <strong>Complete setup</strong></li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4 border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-check-circle-fill"></i> Verification</h5>
                </div>
                <div class="card-body">
                    <h6 class="fw-bold mb-3">How to Verify It's Working:</h6>
                    <ol class="small">
                        <li class="mb-2">
                            <strong>Clear Cloudflare Cache:</strong>
                            <ul class="mt-1">
                                <li>Cloudflare <i class="bi bi-arrow-right"></i> <strong>Caching</strong> <i class="bi bi-arrow-right"></i> <strong>Purge Everything</strong></li>
                            </ul>
                        </li>
                        <li class="mb-2">
                            <strong>Check Your Website:</strong>
                            <ul class="mt-1">
                                <li>Open your website and press <kbd>F12</kbd></li>
                                <li>Go to <strong>Network</strong> tab</li>
                                <li>Filter for: <code>gtm</code> or <code>gtag</code></li>
                                <li>Reload the page</li>
                                <li>
                                    Verify you see requests to your domain like:<br>
                                    <code class="bg-success text-white px-2 py-1">yoursite.com@(Model.MeasurementPath ?? "/metrics")/gtm.js</code> or
                                    <code class="bg-success text-white px-2 py-1">yoursite.com@(Model.MeasurementPath ?? "/metrics")/gtag/js</code><br>
                                    instead of <code class="text-decoration-line-through">www.googletagmanager.com</code>
                                </li>
                            </ul>
                        </li>
                        <li class="mb-2">
                            <strong>Use Tag Assistant:</strong>
                            <ul class="mt-1">
                                <li>Install <a href="https://tagassistant.google.com/" target="_blank" rel="noopener">Google Tag Assistant</a></li>
                                <li>Visit your site and check if GTM is detected and firing</li>
                            </ul>
                        </li>
                    </ol>

                    <div class="alert alert-success mb-0">
                        <strong><i class="bi bi-check-circle-fill"></i> Success looks like:</strong><br>
                        <small>
                            Requests going to 
                            <code class="bg-success text-white px-2 py-1">yoursite.com@(Model.MeasurementPath ?? "/metrics")/gtm.js</code> (for GTM) or
                            <code class="bg-success text-white px-2 py-1">yoursite.com@(Model.MeasurementPath ?? "/metrics")/gtag/js</code> (for GA4)
                            instead of 
                            <code class="bg-danger text-white px-2 py-1 text-decoration-line-through">www.googletagmanager.com</code>
                        </small>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-lightbulb-fill text-warning"></i> Benefits</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="small">
                                <li><i class="bi bi-check-circle text-success"></i> First-party tracking (better data collection)</li>
                                <li><i class="bi bi-shield-check text-success"></i> Bypasses most ad blockers</li>
                                <li><i class="bi bi-speedometer2 text-success"></i> Faster page load (Cloudflare CDN)</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="small">
                                <li><i class="bi bi-lock-fill text-success"></i> Improved privacy compliance</li>
                                <li><i class="bi bi-arrow-repeat text-success"></i> Automatic script updates</li>
                                <li><i class="bi bi-browser-chrome text-success"></i> Better browser compatibility</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-format Tag ID input - support both GTM and GA4 formats
        document.getElementById('GoogleTagManagerId')?.addEventListener('input', function(e) {
            let value = e.target.value.toUpperCase();
            // Only auto-add GTM- prefix if user starts typing without GTM- or G-
            if (value.length > 0 && !value.startsWith('GTM-') && !value.startsWith('G-')) {
                // If it looks like a GA4 ID (starts with just G), add the dash
                if (value.startsWith('G') && value.length > 1) {
                    e.target.value = 'G-' + value.substring(1);
                } else {
                    // Otherwise assume GTM
                    e.target.value = 'GTM-' + value;
                }
            }
        });
    </script>
}
