@page
@model CheckoutModel
@{
    ViewData["Title"] = "Checkout - Shipping Information";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <div class="flex-grow-1">
                    <div class="progress" style="height: 30px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                            <strong>Step 1: Shipping Information</strong>
                        </div>
                        <div class="progress-bar bg-light text-dark" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                            Step 2: Payment
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h1 class="mb-4">Checkout</h1>

    @if (TempData["SessionExpired"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-clock-history"></i> <strong>Session Expired:</strong> Your previous session has expired. Please re-enter your information below.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.CartItems.Any())
    {
        <div class="alert alert-warning">
            Your cart is empty. <a asp-page="/Products/Index">Continue shopping</a>
        </div>
    }
    else
    {
        @if (Model.StockErrors.Any())
        {
            <div class="alert alert-danger">
                <h5><i class="bi bi-exclamation-triangle"></i> Stock Availability Issues</h5>
                <ul class="mb-0">
                    @foreach (var error in Model.StockErrors)
                    {
                        <li>@error</li>
                    }
                </ul>
                <hr>
                <p class="mb-0">
                    <a asp-page="/Cart/Index" class="btn btn-warning">Update Cart</a>
                    to adjust quantities before proceeding.
                </p>
            </div>
        }

        <div class="row">
            <div class="col-lg-8">
                <!-- Privacy Notice -->
                <div class="alert alert-success border-success mb-4">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-shield-check fs-5 me-3 text-success"></i>
                        <div>
                            <h6 class="alert-heading mb-1">Privacy-Focused Checkout</h6>
                            <p class="mb-0 small">
                                We collect shipping details <strong>only for this order</strong>—not stored in your account profile. 
                                This gives you flexibility to ship to different addresses and keeps your personal information minimal.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-person-circle"></i> Contact Information</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" id="checkoutForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            
                            <!-- Hidden field for payment method - handled by Stripe Payment Element -->
                            <input type="hidden" asp-for="PaymentMethod" value="card" />
                            
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                                <small class="form-text text-muted">For shipping label</small>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="your@email.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="(555) 123-4567" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    <small class="form-text text-muted">For delivery updates only</small>
                                </div>
                            </div>

                            <hr class="my-4">
                            
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="mb-0"><i class="bi bi-truck"></i> Shipping Address</h5>
                                <small class="text-muted">
                                    <i class="bi bi-info-circle"></i> Used for this order only
                                </small>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <label asp-for="ShippingAddress" class="form-label"></label>
                                    <input asp-for="ShippingAddress" class="form-control" placeholder="123 Main Street" />
                                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="ShippingCity" class="form-label"></label>
                                    <input asp-for="ShippingCity" class="form-control" placeholder="Los Angeles" />
                                    <span asp-validation-for="ShippingCity" class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="ShippingState" class="form-label"></label>
                                    <input asp-for="ShippingState" class="form-control text-uppercase" id="stateInput" maxlength="2" placeholder="CA" />
                                    <span asp-validation-for="ShippingState" class="text-danger"></span>
                                    <small class="form-text text-muted">2-letter code</small>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="ShippingZip" class="form-label"></label>
                                    <input asp-for="ShippingZip" class="form-control" placeholder="90210" />
                                    <span asp-validation-for="ShippingZip" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-4">
                                <a asp-page="/Cart/Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Cart
                                </a>
                                <button type="submit" class="btn btn-success btn-lg" @(Model.StockErrors.Any() ? "disabled" : "")>
                                    Continue to Payment <i class="bi bi-arrow-right"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>@item.ProductName (x@(item.Quantity))</span>
                                <strong>$@item.Subtotal.ToString("F2")</strong>
                            </div>
                        }
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <strong>$@Model.Subtotal.ToString("F2")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2" id="taxRow">
                            <span>Tax <span id="taxRate" class="text-muted small"></span>:</span>
                            <strong id="taxAmount">$0.00</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <strong>FREE</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <h5>Estimated Total:</h5>
                            <h5 class="text-success"><strong id="orderTotal">$@Model.Subtotal.ToString("F2")</strong></h5>
                        </div>
                        <div id="taxNote" class="alert alert-info mt-3" style="display: none;">
                            <small><i class="bi bi-info-circle"></i> Tax calculated based on shipping state</small>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Secure Checkout</h6>
                        <p class="card-text small text-muted">
                            <i class="bi bi-shield-check text-success"></i> Your information is secure and encrypted
                        </p>
                        <p class="card-text small text-muted">
                            <i class="bi bi-calculator text-primary"></i> Sales tax calculated based on shipping address
                        </p>
                        <p class="card-text small text-muted">
                            <i class="bi bi-box-seam text-info"></i> Stock availability verified at checkout
                        </p>
                        <p class="card-text small text-muted">
                            <i class="bi bi-lock-fill text-warning"></i> Payment processed securely with Stripe
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            const subtotal = @Model.Subtotal;

            // Auto-calculate tax when state is entered
            $('#stateInput').on('input', function() {
                const state = $(this).val().toUpperCase();
                
                if (state.length === 2) {
                    // Calculate tax via AJAX
                    $.get('@Url.Page("/Checkout/Index", "CalculateTax")', { state: state })
                        .done(function(data) {
                            if (data.taxAmount && parseFloat(data.taxAmount) > 0) {
                                $('#taxAmount').text('$' + data.taxAmount);
                                $('#taxRate').text('(' + data.taxRate + ')');
                                $('#orderTotal').text('$' + data.total);
                                $('#taxNote').show();
                            } else {
                                $('#taxAmount').text('$0.00');
                                $('#taxRate').text('(0%)');
                                $('#orderTotal').text('$' + subtotal.toFixed(2));
                                if (data.taxRate === '0%') {
                                    $('#taxNote').html('<small><i class="bi bi-info-circle"></i> No sales tax in ' + state + '</small>').show();
                                } else {
                                    $('#taxNote').hide();
                                }
                            }
                        });
                } else {
                    // Reset tax display
                    $('#taxAmount').text('$0.00');
                    $('#taxRate').text('');
                    $('#orderTotal').text('$' + subtotal.toFixed(2));
                    $('#taxNote').hide();
                }
            });

            // Convert state to uppercase as user types
            $('#stateInput').on('input', function() {
                this.value = this.value.toUpperCase();
            });
        });
    </script>
}
